{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "dist",
    "sourceRoot": "src",
  },
  "exclude": [
    "dist",
    "node_modules",
    "*.js",
    "*.ts"
  ]
}
